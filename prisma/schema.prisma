datasource db {
    url      = env("DATABASE_URL")
    provider = "mongodb"
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id       String @id @default(auto()) @map("_id") @db.ObjectId
    name     String
    email    String @unique
    mobileNo String
    password String
    meterId  String

    tempUnits  Float
    totalUnits Float

    buyerCredit  Int
    SellerCredit Int

    longitude String
    latitude  String

    publicKey  String
    privateKey String

    createdAt DateTime @default(now())
    updateAt  DateTime @updatedAt
}
