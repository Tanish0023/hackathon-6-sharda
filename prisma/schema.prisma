datasource db {
    url      = env("DATABASE_URL")
    provider = "mongodb"
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id         String @id @default(auto()) @map("_id") @db.ObjectId
    name       String
    email      String @unique
    password   String
    meterId    String
    tempUnits  String
    totalUnits Float

    createdAt DateTime @default(now())
    updateAt  DateTime @updatedAt
}
